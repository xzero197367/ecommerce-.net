<UserControl x:Class="Ecommerce.AdminFront.ClientPages.Product.ProductDetailsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Ecommerce.AdminFront.ClientPages.Product"
             mc:Ignorable="d">
    <ui:Card Grid.Column="1" Margin="10" Padding="20">
        <StackPanel>
            <ui:Image Source="/Resources/products/product2.jpg" Width="500"></ui:Image>
            <ui:TextBlock Text="Nike Air Max 270" FontSize="24" FontWeight="Bold"/>
            <ui:TextBlock Text="Experience the ultimate in comfort with Nike's latest Air Max." 
                          TextWrapping="Wrap" Foreground="{DynamicResource UiTextBrush}" />
            <ui:TextBlock Text="Price: $149.99" FontSize="18" FontWeight="SemiBold" 
                          Foreground="{DynamicResource UiAccentBrush}" />
            <ui:TextBlock Text="In Stock: 32" FontSize="14"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <ui:Button Appearance="Primary" Content="Add to Cart" Width="120" Margin="0 0 10 0" Click="Button_Click"/>
                <ui:Button Appearance="Secondary" Content="Buy Now" Width="100"/>
            </StackPanel>
        </StackPanel>
    </ui:Card>
</UserControl>

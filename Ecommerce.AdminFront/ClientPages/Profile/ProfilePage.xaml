<UserControl x:Class="Ecommerce.AdminFront.ClientPages.Profile.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ecommerce.AdminFront.ClientPages.Profile"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Profile Page" FontSize="24" HorizontalAlignment="Center" />
            <TextBlock Text="First Name:" FontWeight="Bold" />
            <TextBlock Text="{Binding User.FirstName}" />
            <TextBlock Text="Last Name:" FontWeight="Bold" />
            <TextBlock Text="{Binding User.LastName}" />
            <TextBlock Text="Email:" FontWeight="Bold" />
            <TextBlock Text="{Binding User.UserEmail}" />
            <TextBlock Text="Username:" FontWeight="Bold" />
            <TextBlock Text="{Binding User.UserName}" />
            <TextBlock Text="Role:" FontWeight="Bold" />
            <TextBlock Text="{Binding User.UserRole}" />
        </StackPanel>
    </Grid>
</UserControl>
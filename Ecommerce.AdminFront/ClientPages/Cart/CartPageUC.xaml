<UserControl x:Class="Ecommerce.AdminFront.ClientPages.Cart.CartPageUC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Ecommerce.AdminFront.ClientPages.Cart"
      xmlns:components="clr-namespace:Ecommerce.AdminFront.Components"
      mc:Ignorable="d" MinWidth="300">
    <Grid>
        <StackPanel>
            <Label FontSize="24" FontWeight="Bold">Cart Items</Label>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"></WrapPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem>
                        <components:CartCardUC/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <components:CartCardUC/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <components:CartCardUC/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <components:CartCardUC/>
                    </ListBoxItem>
                </ListBox>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>

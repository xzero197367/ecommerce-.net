<UserControl x:Class="Ecommerce.AdminFront.ClientPages.Landing.sections.FooterUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ecommerce.AdminFront.ClientPages.Landing.sections"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d">
    <ui:Card  Padding="20" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="100%">
                <!-- First Row with Quick Links -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <ui:Button Content="Home" Width="80" Margin="10"
                               BorderBrush="Transparent" />
                    <ui:Button Content="About Us"  Margin="10"
                               BorderBrush="Transparent" />
                    <ui:Button Content="Contact Us"  Margin="10"
                               BorderBrush="Transparent" />
                    <ui:Button Content="Privacy Policy" Margin="10"
                               BorderBrush="Transparent" />
                </StackPanel>

                <!-- Second Row with Social Media Icons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <ui:Button Content="Facebook"  Margin="10"
                               BorderBrush="Transparent" />
                    <ui:Button Content="Twitter"  Margin="10"
                               BorderBrush="Transparent" />
                    <ui:Button Content="Instagram"  Margin="10"
                               BorderBrush="Transparent" />
                </StackPanel>

                <!-- Third Row with Newsletter Signup -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Subscribe to our Newsletter" FontSize="16"
                               VerticalAlignment="Center" Margin="0,0,10,0" />
                    <ui:Button Content="Sign Up"   Appearance="Primary"
                               BorderBrush="Transparent" />
                </StackPanel>

                <!-- Copyright Row -->
                <TextBlock Text="© 2025 Ecommerce. All rights reserved."
                           HorizontalAlignment="Center" Margin="10" FontSize="12" />
            </StackPanel>
        </ui:Card>
</UserControl>
            <Label FontSize="24">Categories</Label>
            <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                <components:CategoryCardUC/>
                <components:CategoryCardUC/>
                <components:CategoryCardUC/>
                <components:CategoryCardUC/>
            </StackPanel>
        </StackPanel>-->
</UserControl>

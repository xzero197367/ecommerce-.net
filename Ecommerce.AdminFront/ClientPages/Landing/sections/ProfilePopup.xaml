<UserControl x:Class="Ecommerce.AdminFront.ClientPages.Landing.sections.ProfilePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Ecommerce.AdminFront.ClientPages.Landing.sections"
             mc:Ignorable="d" >
    <Border Padding="5" Background="{ui:ThemeResource}">
        <StackPanel Margin="20" >
            <Grid VerticalAlignment="Center" Margin="10">
                <ui:Button Appearance="Secondary" Click="PickImage_Click" VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Icon="{ui:SymbolIcon DrawImage24}" Margin="0,0,0,10" />
                <ui:Image CornerRadius="20" x:Name="ImagePreview" MinWidth="100" Height="200"
                  Source="{Binding ImagePath, Converter={StaticResource RelativePathToImageConverter}}"
                  Stretch="Uniform" />
                <TextBlock Visibility="Collapsed" MaxWidth="250" x:Name="PathText" TextWrapping="Wrap" Margin="0,10,0,0" />
            </Grid>

            <StackPanel Orientation="Vertical">
                <ui:TextBox Text="{Binding User.UserName, Mode=TwoWay}"  />
                <!--<TextBox Text="{Binding User.UserPassword, Mode=TwoWay}" />-->
                <TextBox Text="{Binding User.UserEmail, Mode=TwoWay}"   Margin="0 5"/>
                <TextBox Text="{Binding User.FirstName, Mode=TwoWay}" />
                <TextBox Text="{Binding User.LastName, Mode=TwoWay}" Margin="0 5" />
                <ComboBox SelectedItem="{Binding User.UserRole, Mode=TwoWay}"  >
                    <ComboBoxItem Content="Admin" />
                    <ComboBoxItem Content="User" />
                    <ComboBoxItem Content="Guest" />
                    <!-- Populate according to your UserRole enum -->
                </ComboBox>
            </StackPanel>

            <ui:Button x:Name="btnSave" Visibility="Collapsed" Appearance="Primary"
               Click="btnSave_Click" HorizontalAlignment="Stretch" Margin="5">Save</ui:Button>
        </StackPanel>
    </Border>
</UserControl>

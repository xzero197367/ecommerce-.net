<Window x:Class="Ecommerce.AdminFront.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ecommerce.AdminFront"
        mc:Ignorable="d"
       Title="Popup"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Width="400" Height="400"
        ResizeMode="CanResize" FontFamily="Poppins">
    <Border  Margin="10"  Background="{ui:ThemeResource ApplicationBackgroundBrush}" Padding="10 5" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="Gray"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ui:TitleBar/>

            <Grid Grid.Row="1" x:Name="containerGrid" HorizontalAlignment="Center" VerticalAlignment="Center">

            </Grid>
        </Grid>
    </Border>
</Window>

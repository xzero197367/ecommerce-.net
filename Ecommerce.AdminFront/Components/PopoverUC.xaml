<UserControl x:Class="Ecommerce.AdminFront.Components.PopoverUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Loaded="PopoverUC_OnLoaded"
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Components"
             xmlns:product="clr-namespace:Ecommerce.AdminFront.ClientPages.Product"
             mc:Ignorable="d">
    <Border x:Name="shadowBorder"  Background="#80000000"  
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
       <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"  Opacity="1"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Padding="5" CornerRadius="20">
           <Border.Effect>
               <DropShadowEffect BlurRadius="10" Color="Gray" Direction="Infinity" ></DropShadowEffect>
           </Border.Effect>
           <Grid x:Name="ContainerGrid" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"
           >
           </Grid>
       </Border>
    </Border>
</UserControl>

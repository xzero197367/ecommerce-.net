<UserControl x:Class="Ecommerce.AdminFront.Components.CategoryCardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Components"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d">
    <ui:Card Margin="5">
        <StackPanel MaxWidth="200">
            <ui:Image Source="../../Resources/ecommerce.jpeg" Width="200" CornerRadius="20"></ui:Image>
            <Label FontSize="24" FontWeight="Bold" Content="{Binding Name}" Margin="0 5"></Label>
            <ui:TextBlock  Width="200" TextWrapping="Wrap" Text="{Binding Description}"></ui:TextBlock>
        </StackPanel>
    </ui:Card>
</UserControl>

<UserControl x:Class="Ecommerce.AdminFront.Pages.Users.sections.UserTableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Pages.Users.sections"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" >
    <Grid>
        <ListView Background="Transparent" ItemsSource="{Binding Users}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="User ID" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="100">
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding UserID}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Username" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="150">
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding UserName}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Email" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="200">
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding UserEmail}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!--<GridViewColumn Header="Full Name" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="200">
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" 
                            Text="{Binding Path=., Converter={StaticResource FullNameConverter}}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>-->

                    <GridViewColumn Header="Role" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="100">
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding UserRole}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Active" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="80">
                                    <Label.Content>
                                        <AccessText Text="{Binding IsActive}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Date Created" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="150">
                                    <Label.Content>
                                        <AccessText Text="{Binding DateCreated, StringFormat='{}{0:yyyy-MM-dd}'}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Last Login" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Width="150">
                                    <Label.Content>
                                        <AccessText Text="{Binding LastLoginDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>

            </ListView.View>
        </ListView>  
    </Grid>
</UserControl>

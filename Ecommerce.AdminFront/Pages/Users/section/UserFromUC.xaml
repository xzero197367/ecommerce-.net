<UserControl x:Class="Ecommerce.AdminFront.Pages.Users.sections.UserFromUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Pages.Users.sections"
             xmlns:serv="clr-namespace:Ecommerce.AdminFront.Controls.Services"
             mc:Ignorable="d" >
    <Border Padding="5" BorderBrush="{DynamicResource PrimaryBackgroundColor}" BorderThickness="2" CornerRadius="10" Background="{DynamicResource SecundaryBackgroundColor}" Width="200">
        <StackPanel Orientation="Vertical">
            <TextBox Style="{StaticResource CustomTextBoxStyle}" Margin="0 5 0 0" serv:PlaceholderService.Placeholder="First Name"></TextBox>
            <TextBox Style="{StaticResource CustomTextBoxStyle}" Margin="0 5 0 0"  serv:PlaceholderService.Placeholder="Last Name"></TextBox>

            <TextBox Style="{StaticResource CustomTextBoxStyle}" Margin="0 5 0 0"  serv:PlaceholderService.Placeholder="Username"></TextBox>
            <TextBox Style="{StaticResource CustomTextBoxStyle}" Margin="0 5" serv:PlaceholderService.Placeholder="Email"></TextBox>
            
            <PasswordBox Padding="2" serv:PasswordPlaceholderService.Placeholder="Enter password" 
                         Style="{StaticResource CustomPasswordTextBoxStyle}"></PasswordBox>
            
            
            
            <ComboBox Text="Role" Margin="0 5 0 5" >
                <ComboBoxItem>Admin</ComboBoxItem>
                <ComboBoxItem>Client</ComboBoxItem>
            </ComboBox>
            <Button Style="{DynamicResource SaveButtonStyle}">Save</Button>
        </StackPanel>
    </Border>
</UserControl>

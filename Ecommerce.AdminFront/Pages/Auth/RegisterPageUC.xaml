<UserControl x:Class="Ecommerce.AdminFront.Pages.Auth.RegisterPageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Pages.Auth"
              xmlns:serv="clr-namespace:Ecommerce.AdminFront.Controls.Services"
             mc:Ignorable="d" >
    <Border CornerRadius="5" Background="{DynamicResource PrimaryBackgroundColor}" 
            BorderBrush="{DynamicResource SecundaryBackgroundColor}" Padding="5"
            
            BorderThickness="2"
            >
        <StackPanel Width="200">
            
            <TextBlock Text="Login" FontSize="25" Margin="0 0 0 10" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Bold"
                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtFname" Style="{DynamicResource CustomTextBoxStyle}" serv:PlaceholderService.Placeholder="First Name"/>
            <TextBox x:Name="txtLname" Style="{DynamicResource CustomTextBoxStyle}" Margin="0 5" serv:PlaceholderService.Placeholder="Last Name"/>
            <TextBox x:Name="txtUsername" Style="{DynamicResource CustomTextBoxStyle}" Margin="0 0 0 5" serv:PlaceholderService.Placeholder="username"/>
            <TextBox x:Name="txtEmail" Style="{DynamicResource CustomTextBoxStyle}" serv:PlaceholderService.Placeholder="Email"/>
            <PasswordBox x:Name="txtPassword" Style="{DynamicResource CustomPasswordTextBoxStyle}" Margin="0 5" serv:PasswordPlaceholderService.Placeholder="Password"/>
            <Button x:Name="btnRegister" Click="btnRegister_Click" Style="{DynamicResource SaveButtonStyle}">Register</Button>
        </StackPanel>
    </Border>
</UserControl>

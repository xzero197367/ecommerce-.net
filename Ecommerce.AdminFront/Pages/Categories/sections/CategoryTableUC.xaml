<UserControl x:Class="Ecommerce.AdminFront.Pages.Categories.sections.CategoryTableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Pages.Categories.sections"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" >
    <Grid>
        <ui:ListView Background="Transparent" ItemsSource="{Binding Categories}">
            <ui:ListView.View>
                <ui:GridView>
                    <ui:GridViewColumn Header="Name" Width="100">
                        <ui:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label
                                 Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=Name}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </ui:GridViewColumn.CellTemplate>
                    </ui:GridViewColumn>
                    <ui:GridViewColumn Header="Description" Width="200">
                        <ui:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label
                                    Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=Description}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </ui:GridViewColumn.CellTemplate>
                    </ui:GridViewColumn>
                
                    <ui:GridViewColumn Header="Product Count" Width="200">
                        <ui:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label
                                    Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=ProductCount}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </ui:GridViewColumn.CellTemplate>
                    </ui:GridViewColumn>
                
                    <ui:GridViewColumn Header="Actions" Width="100">
                        <ui:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label
                                    Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=ProductsCount}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </ui:GridViewColumn.CellTemplate>
                    </ui:GridViewColumn>
                
                </ui:GridView>
            </ui:ListView.View>
        </ui:ListView>  
    </Grid>
</UserControl>

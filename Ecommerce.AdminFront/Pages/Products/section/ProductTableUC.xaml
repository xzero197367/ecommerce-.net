<UserControl x:Class="Ecommerce.AdminFront.Pages.Products.sections.ProductTableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ecommerce.AdminFront.Pages.Products.sections"
             mc:Ignorable="d" >
    <Grid>
        <ListView Background="Transparent">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label 
                                 Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=Name}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Description" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label 
                                    Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=Description}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Product Count" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label 
                                    Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=ProductsCount}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Actions" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label 
                                    Width="200" >
                                    <Label.Content>
                                        <AccessText TextWrapping="Wrap" Text="{Binding Path=ProductsCount}"/>
                                    </Label.Content>
                                </Label>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>  
    </Grid>
</UserControl>

<Window x:Class="Ecommerce.FRONT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ecommerce.FRONT"
        xmlns:home_page="clr-namespace:Ecommerce.FRONT.pages.client.home_page"
        xmlns:components="clr-namespace:Ecommerce.FRONT.components"
        mc:Ignorable="d"
        Background="{DynamicResource pageBackground}"
        Loaded="MainWindow_OnLoaded"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <components:TopbarUC x:Name="TopbarUc" ClickCommand="{Binding  DataContext.TopMenuCommand}"/>
        <Grid Grid.Row="1" x:Name="mainGrid">
            <home_page:HomePageUC Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
        <!--Images style-->
        <Style TargetType="Border" x:Key="imag_border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Control.BorderBrush" Value="Gold"/>
                    <Setter Property="CornerRadius" Value="50"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="5" Color="Gold"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Listview style-->
        <Style TargetType="ListView">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"></Setter>
            <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="True"></Setter>
            <Setter Property="Background" Value="{DynamicResource subBackground}"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="20" Color="{DynamicResource shadow1}"/>
                </Setter.Value>
            </Setter>
            
            <Style.Resources>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Black"></Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Black"></Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Background" Value="Gray"></Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
            
        </Style>


